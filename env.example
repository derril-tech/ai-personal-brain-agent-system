# =============================================================================
# MindMesh - Personal Brain Agent System
# Environment Configuration
# =============================================================================

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=MindMesh
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql+asyncpg://mindmesh_user:mindmesh_password@localhost:5432/mindmesh
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# =============================================================================
# JWT Authentication
# =============================================================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# AI/ML Configuration
# =============================================================================
# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# LangSmith (for tracing and evaluation)
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_ENDPOINT=http://localhost:1984
LANGSMITH_PROJECT=mindmesh-dev

# Vector Database
VECTOR_DIMENSION=1536
VECTOR_SIMILARITY_METRIC=cosine

# =============================================================================
# Storage Configuration
# =============================================================================
# S3/MinIO
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin123
S3_BUCKET_NAME=mindmesh-storage
S3_REGION=us-east-1

# =============================================================================
# Connector Configuration
# =============================================================================
# Gmail
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REDIRECT_URI=http://localhost:3000/api/auth/gmail/callback

# Google Calendar
GOOGLE_CALENDAR_CLIENT_ID=your-google-calendar-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-calendar-client-secret
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:3000/api/auth/google-calendar/callback

# Google Drive
GOOGLE_DRIVE_CLIENT_ID=your-google-drive-client-id
GOOGLE_DRIVE_CLIENT_SECRET=your-google-drive-client-secret
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:3000/api/auth/google-drive/callback

# Slack
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_REDIRECT_URI=http://localhost:3000/api/auth/slack/callback

# Notion
NOTION_CLIENT_ID=your-notion-client-id
NOTION_CLIENT_SECRET=your-notion-client-secret
NOTION_REDIRECT_URI=http://localhost:3000/api/auth/notion/callback

# =============================================================================
# Security & Privacy
# =============================================================================
ENCRYPTION_KEY=your-32-byte-encryption-key-for-sensitive-data
PII_REDACTION_ENABLED=true
AUDIT_LOG_ENABLED=true
DATA_RETENTION_DAYS=365

# =============================================================================
# Performance & Monitoring
# =============================================================================
MAX_CONCURRENT_RUNS=10
RUN_TIMEOUT_SECONDS=300
COST_BUDGET_PER_GOAL=5.00
TELEMETRY_ENABLED=true

# =============================================================================
# Frontend Configuration
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
